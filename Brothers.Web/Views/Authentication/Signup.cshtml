@using Brothers.Repository.ServiceMapping.Entities;
@model AuthenticationView
@{
	ViewBag.Title = "AuthenticationView";
}
<div class="login-container">
	

	@using (Html.BeginForm("Create", "Authentication", FormMethod.Post,
												new { enctype = "multipart/form-data" }))
	{
		@Html.ValidationSummary(true)
		<div class="brothers-form-container">
			<h2>Authentication</h2>
			<div class="brothers-form-group">
				@Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "brothers-form-control col-25"})
				@Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "brothers-form-control col-75", placeholder = "Name"}})
				@Html.ValidationMessageFor(model => model.Name, "", new {htmlAttributes = new {@class = "text-danger"}})
			</div>
			<div class="brothers-form-group">
				@Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "brothers-form-control col-25"})
				@Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "brothers-form-control col-75", placeholder = "Email"}})
				@Html.ValidationMessageFor(model => model.Email, "", new {htmlAttributes = new {@class = "text-danger"}})
			</div>
			<div class="brothers-form-group">
				@Html.LabelFor(model => model.Password, htmlAttributes: new {@class = "brothers-form-control col-25"})
				@Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "brothers-form-control col-75", placeholder = "Password"}})
				@Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
			</div>
			<div class="brothers-form-group">
				@Html.Label("Confirm", htmlAttributes: new {@class = "brothers-form-control col-25"})
				@Html.EditorFor(model => model.PasswordConfirm, new {htmlAttributes = new {@class = "brothers-form-control col-75", placeholder = "Confirm password"}})
				@Html.ValidationMessageFor(model => model.PasswordConfirm, "", new {@class = "text-danger"})
				<button type="submit" value="Register">Register</button>
			</div>
		</div>
	}
</div>

